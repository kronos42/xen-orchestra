  "keywords": [],
  "homepage": "https://github.com/vatesfr/xen-orchestra/tree/master/packages/xo-log",
  "bugs": "https://github.com/vatesfr/xo-web/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/vatesfr/xen-orchestra.git"
  },
  "author": {
    "name": "Julien Fontanet",
    "email": "julien.fontanet@vates.fr"
  },
  "preferGlobal": false,
  "main": "dist/",
  "bin": {},
  "files": [
    "dist/"
  ],
  "engines": {
    "node": ">=4"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "promise-toolbox": "^0.8.2"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-plugin-lodash": "^3.2.11",
    "babel-preset-env": "^1.3.2",
    "babel-preset-stage-3": "^6.22.0",
    "cross-env": "^4.0.0",
    "dependency-check": "^2.8.0",
    "husky": "^0.13.3",
    "index-modules": "^0.3.0",
    "jest": "^19.0.2",
    "rimraf": "^2.6.1",
    "standard": "^9.0.2"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production babel --source-maps --out-dir=dist/ src/",
    "commitmsg": "npm test",
    "dev": "cross-env NODE_ENV=development babel --watch --source-maps --out-dir=dist/ src/",
    "dev-test": "jest --bail --watch",
    "posttest": "standard && dependency-check ./package.json",
    "prebuild": "rimraf dist/ && index-modules --cjs-lazy src/transports",
    "predev": "npm run prebuild",
    "prepublish": "npm run build",
    "test": "jest"
  },
  "babel": {
    "plugins": [
      "lodash"
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 4
          }
        }
      ],
      "stage-3"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testRegex": "\\.spec\\.js$"
  },
  "standard": {
    "ignore": [
      "dist"
    ],
    "parser": "babel-eslint"
  }
}
